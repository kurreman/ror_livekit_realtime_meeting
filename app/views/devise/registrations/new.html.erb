<div class="min-h-screen flex flex-col items-center justify-center px-4">
  <div class="custom-card w-full max-w-md">
    <h2 class="text-center mb-6 custom-gradient-text">Create Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :username, class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", 
                        class: "custom-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500 dark:text-gray-400">
            (<%= @minimum_password_length %> characters minimum)
          </span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
                           class: "custom-input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                           class: "custom-input" %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit "Sign up", class: "custom-button w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>