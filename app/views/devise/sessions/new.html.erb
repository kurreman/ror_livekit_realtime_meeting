<div class="min-h-screen flex flex-col items-center justify-center px-4">
  <div class="custom-card w-full max-w-md">
    <h2 class="text-center mb-6 custom-gradient-text">Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :username, class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", 
                        class: "custom-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", 
                            class: "custom-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:border-gray-700 dark:focus:ring-blue-600" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
        </div>
      <% end %>

      <div class="flex items-center justify-center">
        <%= f.submit "Log in", class: "custom-button w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>