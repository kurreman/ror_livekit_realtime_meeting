<div class="min-h-screen flex flex-col items-center justify-center px-4">
  <div class="custom-card w-full max-w-md">
    <h2 class="text-center mb-6 custom-gradient-text">Create New Room</h2>

    <%= form_with(model: @room, url: rooms_path, method: :post, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :name, "Room Name", class: "block text-sm font-medium mb-1" %>
        <%= form.text_field :name, required: true, class: "custom-input", placeholder: "Enter room name" %>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Choose a memorable name for your meeting room</p>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "Create Room", class: "custom-button" %>
        <%= link_to "Cancel", authenticated_root_path, class: "custom-button-secondary" %>
      </div>
    <% end %>
  </div>
</div>